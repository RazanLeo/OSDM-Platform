// From Gumroad: Discount Codes & Email Marketing
model DiscountCode {
  id              String   @id
  code            String   @unique
  sellerId        String
  productId       String?
  serviceId       String?
  discountType    String   // PERCENTAGE, FIXED_AMOUNT
  discountValue   Decimal  @db.Decimal(10, 2)
  maxUses         Int?
  usedCount       Int      @default(0)
  expiresAt       DateTime?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  User            User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  @@index([code])
  @@index([sellerId])
  @@index([isActive])
}

model EmailCampaign {
  id              String   @id
  sellerId        String
  subject         String
  contentAr       String
  contentEn       String
  recipientType   String   // ALL_CUSTOMERS, SUBSCRIBERS, SPECIFIC
  recipientIds    String[]
  scheduledAt     DateTime?
  sentAt          DateTime?
  status          String   @default("DRAFT")
  openCount       Int      @default(0)
  clickCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  User            User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  @@index([sellerId])
  @@index([status])
}

// From Gumroad: Customer Relationship Management
model Customer {
  id              String   @id
  sellerId        String
  buyerId         String
  firstPurchase   DateTime @default(now())
  lastPurchase    DateTime @default(now())
  totalSpent      Decimal  @default(0) @db.Decimal(10, 2)
  totalOrders     Int      @default(0)
  tags            String[]
  notes           String?
  isSubscribed    Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  Seller          User     @relation("CustomerSeller", fields: [sellerId], references: [id], onDelete: Cascade)
  Buyer           User     @relation("CustomerBuyer", fields: [buyerId], references: [id], onDelete: Cascade)

  @@unique([sellerId, buyerId])
  @@index([sellerId])
  @@index([buyerId])
}

// From Picalica: Product Types & Exclusivity
model ProductType {
  id              String    @id
  nameAr          String
  nameEn          String
  slug            String    @unique
  description     String?
  icon            String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())

  @@index([slug])
}

// From Fiverr: Gig Extras & Video Intro
model GigExtra {

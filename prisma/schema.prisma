model TimeEntry {
  id              String   @id
  contractId      String
  freelancerId    String
  hours           Decimal  @db.Decimal(5, 2)
  description     String
  date            DateTime
  screenshots     String[]
  isApproved      Boolean  @default(false)
  approvedAt      DateTime?
  createdAt       DateTime @default(now())
  Contract        Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
  User            User     @relation(fields: [freelancerId], references: [id])

  @@index([contractId])
  @@index([freelancerId])
  @@index([date])
}

model Connect {
  id          String      @id
  userId      String
  amount      Int
  type        ConnectType
  usedFor     String?
  projectId   String?
  purchasedAt DateTime?
  usedAt      DateTime?
  expiresAt   DateTime?
  createdAt   DateTime    @default(now())
  User        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
}

model Portfolio {
  id              String   @id
  userId          String
  titleAr         String
  titleEn         String
  descriptionAr   String
  descriptionEn   String
  images          String[]
  attachments     String[]
  link            String?
  skills          String[]
  completionDate  DateTime?
  clientName      String?
  isPublished     Boolean  @default(true)
  viewCount       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublished])
}

model License {
  id              String   @id
  productId       String
  orderId         String
  licenseKey      String   @unique
  buyerEmail      String
  activatedAt     DateTime?
  expiresAt       DateTime?
  maxActivations  Int      @default(1)
  activationCount Int      @default(0)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())

  @@index([productId])
  @@index([orderId])
  @@index([licenseKey])
  @@index([buyerEmail])
}

model Subscription_Product {
  id              String   @id
  productId       String
  subscriberId    String
  plan            String
  status          String   @default("ACTIVE")
  amount          Decimal  @db.Decimal(10, 2)
  billingCycle    String
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean @default(false)
  canceledAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  User            User     @relation(fields: [subscriberId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([subscriberId])
  @@index([status])
}

model BuyerRequest {
  id              String   @id
  buyerId         String
  titleAr         String
  titleEn         String
  descriptionAr   String
  descriptionEn   String
  categoryId      String
  budget          Decimal  @db.Decimal(10, 2)
  deadline        DateTime
  skills          String[]
  offerCount      Int      @default(0)
  status          String   @default("OPEN")
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  expiresAt       DateTime
  User            User     @relation(fields: [buyerId], references: [id], onDelete: Cascade)

  @@index([buyerId])
  @@index([categoryId])
  @@index([status])
  @@index([expiresAt])
}

model ServiceRequirement {
  id              String   @id
  serviceId       String
  questionAr      String
  questionEn      String
  type            String
  isRequired      Boolean  @default(true)
  options         String[]
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  Service         Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([serviceId])
}

model OrderRequirement {
  id              String        @id
  serviceOrderId  String
  requirementId   String
  questionAr      String
  questionEn      String
  answer          String
  createdAt       DateTime      @default(now())
  ServiceOrder    ServiceOrder  @relation(fields: [serviceOrderId], references: [id], onDelete: Cascade)

  @@index([serviceOrderId])
}

model Delivery {
  id              String        @id
  serviceOrderId  String
  sellerId        String
  message         String
  files           String[]
  deliveredAt     DateTime      @default(now())
  isAccepted      Boolean?
  feedback        String?
  respondedAt     DateTime?
  revisionNumber  Int           @default(0)
  ServiceOrder    ServiceOrder  @relation(fields: [serviceOrderId], references: [id], onDelete: Cascade)
  User            User          @relation(fields: [sellerId], references: [id])

  @@index([serviceOrderId])
  @@index([sellerId])
}

model SellerBadge {
  id              String   @id
  userId          String
  badgeType       String
  nameAr          String
  nameEn          String
  descriptionAr   String
  descriptionEn   String
  icon            String
  earnedAt        DateTime @default(now())
  expiresAt       DateTime?
  isActive        Boolean  @default(true)
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([badgeType])
}

model Affiliate {
  id              String   @id
  userId          String
  affiliateCode   String   @unique
  commission      Decimal  @default(10) @db.Decimal(5, 2)
  totalClicks     Int      @default(0)
  totalSales      Int      @default(0)
  totalEarnings   Decimal  @default(0) @db.Decimal(10, 2)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  AffiliateSale   AffiliateSale[]

  @@index([userId])
  @@index([affiliateCode])
}

model AffiliateSale {
  id              String   @id
  affiliateId     String
  productId       String?
  serviceId       String?
  orderId         String
  saleAmount      Decimal  @db.Decimal(10, 2)
  commission      Decimal  @db.Decimal(10, 2)
  status          String   @default("PENDING")
  paidAt          DateTime?
  createdAt       DateTime @default(now())
  Affiliate       Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId])
  @@index([orderId])
  @@index([status])
}

model PromotedListing {
  id              String   @id
  userId          String
  productId       String?
  serviceId       String?
  projectId       String?
  budget          Decimal  @db.Decimal(10, 2)
  spent           Decimal  @default(0) @db.Decimal(10, 2)
  clicks          Int      @default(0)
  views           Int      @default(0)
  orders          Int      @default(0)
  startDate       DateTime
  endDate         DateTime
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isActive])
  @@index([startDate])
}


  expiresAt       DateTime?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([skill])
}

// From Bahr: Zero Fees Projects & Industry Categories
model IndustryCategory {
  id              String   @id
  nameAr          String
  nameEn          String
  slug            String   @unique
  icon            String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())

  @@index([slug])
}

model ZeroFeeProject {
  id              String   @id
  projectId       String   @unique
  sponsorId       String?
  reason          String
  approvedBy      String?
  approvedAt      DateTime?
  createdAt       DateTime @default(now())
  Project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([sponsorId])
}

// Enhanced Bid System (Bahr/Mostaql)
model ProjectBid {
  id              String   @id
  projectId       String
  freelancerId    String
  proposalAr      String
  proposalEn      String
  bidAmount       Decimal  @db.Decimal(10, 2)
  deliveryDays    Int
  attachments     String[]
  status          String   @default("PENDING")
  isShortlisted   Boolean  @default(false)
  viewedAt        DateTime?
  respondedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  Project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  User            User     @relation(fields: [freelancerId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([freelancerId])
  @@index([status])
}

// Rating & Review System Enhancement
model ReviewResponse {
  id              String        @id
  reviewId        String        @unique
  productReviewId String?       @unique
  response        String
  respondedAt     DateTime      @default(now())
  ProductReview   ProductReview? @relation(fields: [productReviewId], references: [id], onDelete: Cascade)

  @@index([reviewId])
}

// Instant Download Tracking (Gumroad)
model DownloadLog {
  id              String   @id
  productOrderId  String
  productId       String
  buyerId         String
  downloadedAt    DateTime @default(now())
  ipAddress       String?
  userAgent       String?

  @@index([productOrderId])
  @@index([productId])
  @@index([buyerId])
}
